<script>
	$('.body-menu .btn-dismiss').click(function() {
		$('.body-menu').addClass('hide-highlight');
		$.get('/Home/AjaxToggleFeatured');
		return false;
	});

	$('.high-remiss a, .body-menu .dismissed-fx, .body-menu .btn-remiss').click(function() {
		$('.body-menu').removeClass('hide-highlight');
		$.get('/Home/AjaxToggleFeatured');
		return false;
	});

	$('#btn-tglmenu').on('click', function() {
		$('.body-menu').toggleClass('collapsed');
		$('#btn-tglmenu i').toggleClass('icon-angle-double-left icon-angle-double-right');
	});
</script>


<script>
	@if(TempData["msg-alert"]!=null)
	{
		<text>
			$.bootstrapGrowl('@TempData["msg-alert"]', { width: 'auto' });
		</text>
	}
	@if(TempData["msg-error"]!=null)
	{
		<text>
			$.bootstrapGrowl('@TempData["msg-error"]', { width: 'auto', type: 'danger' });
		</text>
	}
</script>